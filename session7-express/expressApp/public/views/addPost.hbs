{{>header}}
{{>navbar}}
    <form method="post"> 
        {{!-- action="addPostLogic" --}}
        <div class="mb-3">
            <input placeholder="Name" name="name" class="form-control my-2" value={{data.name}}>
            {{#if errors.name}}
            <p class="alert alert-danger my-2">{{errors.name}}</p>
            {{/if}}
        </div>
        <div class="mb-3">
            <input placeholder="Email" name="email" class="form-control my-2" value={{data.email}}>
            {{#if errors.email}}
            <p class="alert alert-danger my-2">{{errors.email}}</p>
            {{/if}}
        </div>
        <div class="mb-3">
            <input placeholder="Age" name="age" class="form-control my-2" value={{data.age}}>
            {{#if errors.age}}
            <p class="alert alert-danger my-2">{{errors.age}}</p>
            {{/if}}
        </div>
        <div class="mb-3">
            <button class="btn btn-primary">Add Post</button>
        </div>
    </form>
{{>footer}}