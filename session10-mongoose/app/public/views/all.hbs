{{>header}}
{{>navbar}}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#unless hasUsers}}
        <tr class="alert alert-danger">
            <td colspan="5" class="text-center">No data yet</td>
        </tr>
        {{else}}
        {{#each users}}
        <tr>
            <td>{{this._id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.age}}</td>
            <td>
                <a href="/single/{{this._id}}" class="btn btn-success mx-2">Show</a>
                <a href="/edit/{{this._id}}" class="btn btn-warning mx-2">Edit</a>
                <a href="/del/{{this._id}}" class="btn btn-danger mx-2">Delete</a>
                <a href="/addAddr/{{this._id}}" class="btn btn-primary mx-2">Add address</a>
            </td>
        </tr>
        {{/each}}
        {{/unless}}
    </tbody>
</table>

{{>footer}}